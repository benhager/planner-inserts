%!PS-Adobe-3.0
%%Title: Cornellish Notes Verso - Letter
%%Author: Dr. Drang (drdrang at gmail)
%%EndComments
%%BeginSetup

% basic dimensions
/inch {72 mul} def            % conversion to points
/swidth 8.5 inch def        % letter-sized sheet width
/slength 11 inch def        % letter-sized sheet length

% size of printed area
/width 7.25 inch def
/length 10 inch def

% dimensions of gridded area
/gwidth 5.625 inch def
/glength 9.375 inch def
/gspace .3125 inch def

% dimensions of cue area
/cwidth width gwidth sub def
/clength glength def

% dimensions of title block
/hwidth width def
/hlength .5 inch def
/hpage hwidth .75 inch sub def
/hdate hpage 1.25 inch sub def

% draw the notes
% stack: llx lly
/notes {
  /lly exch def
  /llx exch def

  % draw cue area
  .5 setlinewidth
  0 setgray
  newpath
    llx gwidth add lly moveto
    cwidth 0 rlineto
    0 clength rlineto
    cwidth neg 0 rlineto
  closepath
  stroke

  % draw grid horizontals
  .25 setlinewidth
  0 setgray
  [1 1] 0 setdash
  lly gspace lly glength add {
    newpath
      llx exch moveto
      gwidth 0 rlineto
    stroke
  } for
  [] 0 setdash

  % draw grid verticals
  0.125 setlinewidth
  0 setgray
  [1 6.5] 4 setdash
  llx gspace llx gwidth add {
    newpath
      lly moveto
      0 glength rlineto
    stroke
  } for
  [] 0 setdash

  % draw grid box
  .5 setlinewidth
  0 setgray
  newpath
    llx lly moveto
    gwidth 0 rlineto
    0 glength rlineto
    gwidth neg 0 rlineto
  closepath
  stroke

  % draw title block
  .5 setlinewidth
  0 setgray
  newpath
    llx lly length add moveto
    hwidth 0 rlineto
    0 hlength neg rlineto
    hwidth neg 0 rlineto
  closepath
  stroke

  % page and date separators
  .5 setlinewidth
  0 setgray
  newpath
    llx hpage add lly length add moveto
    0 hlength neg rlineto
  stroke
  newpath
    llx hdate add lly length add moveto
    0 hlength neg rlineto
  stroke
} def

% draw the notes section
gsave
0 0 moveto
.5 inch .5 inch notes
grestore

showpage


